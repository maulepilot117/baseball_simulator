{
  "name": "baseball-simulation-frontend",
  "version": "1.0.0",
  "description": "Baseball simulation frontend built with Deno and React",
  "exports": "./src/main.tsx",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --watch dev.ts",
    "start": "deno task dev",
    "test": "deno test --allow-all"
  },
  "imports": {
    "react": "https://esm.sh/react@18.2.0",
    "react-dom": "https://esm.sh/react-dom@18.2.0",
    "react-dom/client": "https://esm.sh/react-dom@18.2.0/client", 
    "react-router-dom": "https://esm.sh/react-router-dom@6.8.1",
    "recharts": "https://esm.sh/recharts@2.12.7",
    "lucide-react": "https://esm.sh/lucide-react@0.263.1",
    "@types/react": "https://esm.sh/@types/react@18.2.79",
    "@types/react-dom": "https://esm.sh/@types/react-dom@18.2.25"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2022"],
    "strict": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  }
}